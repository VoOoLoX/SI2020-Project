@page
@model LoginModel
@{ Layout = "_LayoutEmpty"; ViewBag.Title = "Prijavi se"; ViewBag.Style = "/static/css/styleLogin.css"; }

<div class="container">

    <div class="left">
        <img src="~/Static/pics/logo.svg" alt="">
        <h1>Pronađi pravi auto za sebe, <span>KOD NAS</span>!</h1>
    </div>
    
	<div class="right">
		<h2>Dobrodosli nazad!</h2>

		<form>
			<label>Korisničko ime:</label>
			<input type="text">
			<label>Šifra:</label>
			<input type="text">
		</form>

		<div class="right-bottom">
			<a class="btn-login">Prijavi se</a>
			<div class="info-wrap">
				<p>Nemaš nalog?</p>
				<a asp-page="/Register">Registruj se</a>
			</div>
		</div>
	</div>

</div>