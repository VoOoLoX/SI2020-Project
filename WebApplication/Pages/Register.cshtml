@page
@model LoginModel
@{ Layout = "_LayoutEmpty"; ViewBag.Title = "Registruj se"; ViewBag.Style = "/static/css/styleRegister.css"; }

<div class="container">

	<div class="left">
		<img src="/static/pics/logo.svg" alt="">
		<h1>Pronađi pravi auto za sebe, <span>KOD NAS</span>!</h1>
	</div>

	<div class="right">
		<h2>Dobrodosli!</h2>

		<form id="register-form">
			<label for="email">E-mail:</label>
			<input type="email" name="email" id="email">

			<label for="password">Šifra:</label>
			<input type="password" name="password" id="password">

			<label for="confirm_password">Potvrdi šifra:</label>
			<input type="password" name="confirm_password" id="confirm_password">

			<label id="result-message"></label>
		</form>

		<div class="right-bottom">
			<a class="btn-login" onclick="register()">Registruj se</a>
			<div class="info-wrap">
				<p>Imaš nalog?</p>
				<a asp-page="/Login">Prijavi se</a>
			</div>
		</div>
	</div>

</div>