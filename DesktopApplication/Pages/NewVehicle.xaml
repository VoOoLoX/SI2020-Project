                    <Control:TextInput Label="Godina proizvodnje:" Grid.Column="1" Margin="36,117,35,117" Width="190" Height="55"/>
                    <Control:TextInput Label="Cena:" Grid.Column="1" Margin="36,177,35,57" Width="190" Height="55"/>
                </Grid>
            </Grid>
        </Grid>
